<%- include("partials/header.ejs") %>

    <div class="container"> 
        <main> 
            <div class="py-5 text-center"> 
                <h1 class="h2">Add a book!</h1> 
            </div> 
            
            <div class="row g-5">
                <div>
                    <form class="needs-validation" novalidate="" method="POST" action="/add">  
                        <div class="py-2"> 
                            <label for="title" class="form-label">Book Title</label> 
                            <div class="input-group has-validation"> 
                                <input type="text" class="form-control" id="title" name="title" placeholder="Title" required=""> 
                                <div class="invalid-feedback">Book title is required.</div> 
                            </div> 
                        </div> 
                        <div class="py-2"> 
                            <label for="author" class="form-label">Author's Name</label> 
                            <input type="text" class="form-control" id="author" name="author" placeholder="Name"> 
                            <div class="invalid-feedback">Please enter author's full name.</div> 
                        </div>
                        <div class="py-2"> 
                            <label for="notes" class="form-label">Book Notes</label> 
                            <input type="text" class="form-control" id="notes" name="notes" placeholder="Summary"> 
                        </div> 
                        <div class="row py-2">
                            <div class="col"> 
                                <label for="coverid" class="form-label">Cover ID</label> 
                                <input type="text" class="form-control" id="coverid" name="coverID" placeholder="ID"> 
                            </div> 
                            <div class="col"> 
                                <label for="rating" class="form-label">Book Rating</label> 
                                <select class="form-select" id="rating" name="rating" required> 
                                    <option value="">Select rating</option> 
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                    <option>9</option>
                                    <option>10</option>
                                </select> 
                                <div class="invalid-feedback">Please select a rating from 1 to 10</div> 
                            </div> 
                            <div class="col"> 
                                <label for="date" class="form-label">Date Read</label> 
                                <input type="date" name="date" id="date" class="form-select">
                                <div class="invalid-feedback">Please provide a valid state.</div> 
                            </div> 
                        </div>
                        <hr class="my-4"> 
                        <button class="w-100 btn btn-success btn-lg" type="submit">Add Book!</button> 
                    </form> 
                </div> 
            </div> 
        </main> 
    </div>