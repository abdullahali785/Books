<%- include("partials/header.ejs") %>

<div class="px-4 py-5 my-5 text-center"> 
    <h1 class="display-5 fw-bold text-body-emphasis">Are you sure you want to delete <br>
        <em>'<%= book.title %>'</em>?</h1> 
    <div class="col-lg-6 mx-auto"> 
        <div class="d-grid gap-2 py-5 d-sm-flex justify-content-sm-center"> 
            <form method="POST" action="/delete/<%= book.id %>">
                <button type="submit" class="btn btn-danger btn-lg px-4 gap-3">Delete</button> 
                <a href="/" class="btn btn-lg btn-success">Cancel</a>
            </form>
        </div> 
    </div> 
</div>

<div class="container"> 
    <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top"> 
        <p class="col-md-4 mb-0 text-body-secondary">Made by Abdullah</p> 
        <ul class="nav col-md-4 justify-content-end"> 
            <li class="nav-item"><a href="/" class="nav-link px-2 text-body-secondary">Home</a></li> 
        </ul> 
    </footer> 
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>